<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.axr.sjoerd.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        >
        <!--<activity android:name=".Applicationlayer.LoginActivity">-->
        <activity android:name=".Presentationlayer.LoginActivity" android:theme="@style/HiddenTopLayer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Presentationlayer.RegisterActivity" android:theme="@style/HiddenTopLayer" ></activity>
        <activity android:name=".Presentationlayer.ListView" android:theme="@style/AppTheme"></activity>
        <activity android:name=".Presentationlayer.DetailView" android:theme="@style/AppTheme"></activity>
    </application>

</manifest>